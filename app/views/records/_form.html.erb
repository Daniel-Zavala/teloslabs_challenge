<%= form_with(model: record) do |form| %>
  <% if record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
        <% record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<li class="list-group-item">
  <div class="field form-group">
    <%= form.label :date %>:&nbsp;
    <%= form.date_select :date, class:"form-control" %>
    <br><br>
  </div>
</li>

<li class="list-group-item">
  <div class="field form-group">
    <%= form.label :activity_id %>:&nbsp;
    <%= form.collection_select(:activity_id ,Activity.where(["share=true OR user_id = ?",current_user.id]), :id, :name) %>
  </div>
</li>

<li class="list-group-item">
  <div class="field form-group">
    <%= form.label :minutes %>
    <%= form.number_field :minutes, class:"form-control" %>
  </div>
</li>

<li class="list-group-item">
  <div class="field form-group">
    <%= form.label :notes %>
    <%= form.text_field :notes, class:"form-control" %>
  </div>
</li>

<li class="list-group-item">
  <div class="form-check form-group">
    <%= form.check_box :share, class:"form-check-input form-control" %>&nbsp;
    <label>Share?</label>
  </div>
</li>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :record_user_id,
    class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <!-- rec_id, not used -->
  <div class="field">
    <%= form.number_field :rec_id, class:"form-control", type: :hidden %>
  </div>
  <!-- rec_id, not used -->

<li class="list-group-item">
  <div class="actions">
    <%= form.submit class:'btn btn-success'%>
  </div>
</li>
<% end %>
