

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Rec</th>
      <th>Minutes</th>
      <th>Notes</th>
      <th>Date</th>
      <th>User</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.rec_id %></td>
        <td><%= record.minutes %></td>
        <td><%= record.notes %></td>
        <td><%= record.date %></td>
        <td><%= record.user_id %></td>
        <td><%= record.activity_id %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

