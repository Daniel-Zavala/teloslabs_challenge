<% if user_signed_in? %>

  <h1>Records</h1>

  <table>
    <thead>
      <tr>
        <th>Rec id</th>
        <th>Minutes</th>
        <th>Notes</th>
        <th>Date</th>
        <th>UserId</th>
        <th>Activity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @records.each do |record| %>
        <% if record.user == current_user %>
          <tr>
            <td><%= record.id %></td>
            <td><%= record.minutes %></td>
            <td><%= record.notes %></td>
            <td><%= record.date %></td>
            <td><%= record.user_id %></td>
            <td><%= record.activity_id %></td>
            <td><%= link_to 'Show', record %></td>

            <td><%= link_to 'Edit', edit_record_path(record) %></td>
            <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Record', new_record_path %>

<% else %>

<h1>Welcome!</h1>
<br>
This is my project for the Telos Labs Challenge
<br><br>
Please Sign in or Sign up to start using
<br>
<% end %>